{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es6"],
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "outDir": "bin",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
